<%= form_for(@option, html: { class: "ui form" }) do |f| %>
  <% if @option.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@option.errors.count, "error") %> prohibited this option from being saved:</h2>

      <ul>
      <% @option.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :parent_option_id %><br>
    <%= f.collection_select(:parent_option_id, Option.all, :id, :name, :prompt => 'Top level (no parent)') %>
  </div>
  <div class="actions">
    <%= f.submit class: "ui primary button" %>
  </div>
<% end %>
